<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="Simanov Aleksey" id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="room_improvement_types"/>
            </not>
        </preConditions>
        <createTable tableName="room_improvement_types">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="room_improvement_types_pkey"/>
            </column>
            <column name="key_room_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="period" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="improvement_type_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="service_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="improvement_type_id" baseTableName="room_improvement_types"
                                 constraintName="fkjlxiqnn473vpu2hpwn1v3s0vq" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id" referencedTableName="improvement_types"/>
        <addForeignKeyConstraint baseColumnNames="service_id" baseTableName="room_improvement_types"
                                 constraintName="fkspc8osvg6eotog0jt5lu06o4e" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id" referencedTableName="services"/>
        <rollback>
            <dropTable tableName="room_improvement_types"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
