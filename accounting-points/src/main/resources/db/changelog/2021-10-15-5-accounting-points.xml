<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="Simanov Aleksey" id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="accounting_points"/>
            </not>
        </preConditions>
        <createTable tableName="accounting_points">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="accounting_points_pkey"/>
            </column>
            <column name="description" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="accounting_points"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
