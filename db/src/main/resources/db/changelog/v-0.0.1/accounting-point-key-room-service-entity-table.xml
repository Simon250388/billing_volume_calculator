<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Simanov Aleksey">
        <createTable tableName="accounting_point_key_room_service_entity">
            <column name="id" type="BigInt" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="accounting_point_key_room_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_accounting_point_key_room_accounting_point_key_room_id_accounting_point_key_room"
                             references="accounting_point_key_room(id)"></constraints>
            </column>
            <column name="service_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_accounting_point_key_room_service_id_services"
                             references="services(id)"></constraints>
            </column>
            <column name="direction_of_use_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_accounting_point_key_room_direction_of_use_id_direction_of_uses"
                             references="direction_of_uses(id)"></constraints>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
