<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Simanov Aleksey">
        <createTable tableName="rooms">
            <column name="id" type="BigInt" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_parent_id_rooms" references="rooms(id)"/>
            </column>
            <column name="building_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_building_id_buildings" references="buildings(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
