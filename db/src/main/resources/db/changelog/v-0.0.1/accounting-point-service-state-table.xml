<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Simanov Aleksey">
        <createTable tableName="accounting_point_service_state">
            <column name="id" type="BigInt" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="period" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="period_fact" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="accounting_point_key_room_service_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_accounting_point_service_state_accounting_point_key_room_service_id_accounting_point_key_room_service_entity"
                             references="accounting_point_key_room_service_entity(id)"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>


